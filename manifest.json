
{
    "manifest_version": 3,
    "name": "Pebble",
    "version": "1.0",
    "description": "Pebble makes any webpage kid-friendly with simple rewrites, translates, fun facts, and quizzes â€” turning browsing into daily learning.",
    "icons": {
        "16": "images/pebble_128.png",
        "32": "images/pebble_128.png",
        "48": "images/pebble_128.png",
        "128": "images/pebble_128.png"

    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs",
        "sidePanel"
        ],
    "action": {
        "default_popup": "popup.html",
    "default_icon": {
        "16": "images/pebble_128.png",
        "32": "images/pebble_128.png",
        "48": "images/pebble_128.png",
        "128": "images/pebble_128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["progress.css"]
        }
    ],
    "host_permissions": ["<all_urls>"],
    "side_panel": {
        "default_path": "learningPanel.html"
    }
}