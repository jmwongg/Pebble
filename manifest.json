
{
    "manifest_version": 3,
    "name": "Kids' Curiosity",
    "version": "1.0",
    "description": "A safe, kid-friendly learning companion that rewrites, translates, and explains web content in simple ways.",
    "icons": {
        "48": "images/icon48.jpg"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs"
        ],
    "action": {
        "default_popup": "popup.html",
    "default_icon": {
        "48": "images/icon48.jpg"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
        }
    ]
}